{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A basic pie chart example.",
  "width": 30,
  "height": 30,
  "autosize": "none",

  "data": [
    {
      "name": "table",
      "values": [
        {"name": "female", "value": 90},
        {"name": "male", "value": 10},
        {"name": "other", "value": 0}
      ],
      "transform": [
        {
          "type": "formula",
          "expr": "datum.name + ': ' + datum.value + '%'",
          "as": "label"
        },
        {
          "type": "pie",
          "field": "value"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "name"},
      "range": ["#fb4922", "#f9fe9c", "#1d1d2f"]
    }
  ],

  "marks": [
    {
      "type": "arc",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "fill": {"scale": "color", "field": "name"},
          "x": {"signal": "width / 2"},
          "y": {"signal": "height / 2"},
          "tooltip": { "field": "label" }
        },
        "update": {
          "startAngle": {"field": "startAngle"},
          "endAngle": {"field": "endAngle"},
          "outerRadius": {"signal": "width / 2"}
        }
      }
    }
  ]
}
